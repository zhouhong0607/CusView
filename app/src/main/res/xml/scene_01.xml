<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Transition
        app:constraintSetEnd="@id/motion_scene_01_end"
        app:constraintSetStart="@id/motion_scene_01_start"
        >
        <!--app:duration="500"-->

        <!--默认dragDown-->
        <OnSwipe
        app:dragDirection="dragRight"

             />

        <!--app:touchAnchorId="@id/motion_view_01"-->
        <!--app:touchAnchorSide="right"-->


        <!--<OnClick-->
            <!--app:clickAction="toggle"-->
            <!--/>-->

        <!--app:target="@id/motion_view_01"-->



        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="3"
                android:scaleY="3"
                app:framePosition="50"
                app:target="@id/motion_view_01" />
        </KeyFrameSet>

    </Transition>


    <ConstraintSet android:id="@+id/motion_scene_01_start">
        <Constraint
            android:id="@id/motion_view_01"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--Saturation-->
            <!--Crossfade-->
            <!--Warmth-->
            <!--Brightness-->
            <!--Contrast-->


            <CustomAttribute
                app:attributeName="Crossfade"
                app:customFloatValue="0" />

          

        </Constraint>


        <!--<CustomAttribute-->
            <!--app:attributeName="backgroundColor"-->
            <!--app:customColorValue="@color/green"-->
            <!--/>-->
        
        <!--无效 需要自定义属性-->
        <!--android:background="@color/green"-->

    </ConstraintSet>

    <ConstraintSet android:id="@+id/motion_scene_01_end">

        <Constraint
            android:id="@id/motion_view_01"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:rotationY="360"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--Saturation-->
            <!--Crossfade-->
            <!--Warmth-->
            <!--Brightness-->
            <!--Contrast-->

            <CustomAttribute
                app:attributeName="Crossfade"
                app:customFloatValue="1" />

        </Constraint>
        <!--<CustomAttribute-->
            <!--app:attributeName="backgroundColor"-->
            <!--app:customColorValue="@color/red"-->
            <!--/>-->



    </ConstraintSet>


</MotionScene>